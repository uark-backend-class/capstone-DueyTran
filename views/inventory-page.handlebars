<h1>{{ title }}</h1>
<h3>Signed in as: {{ email }} </h3>
<br>
<a href="/logout" id="logout"><button>Sign Out</button></a>
<a href="/newForm" target="_blank"><button>NEW</button></a><br>
<div>
    <table border="1" id="inventoryTable" class="table table-hover">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Unit Type</th>
        </tr>
    </thead>
    <ol>
    <tbody>
        {{#each inventory}}
            <tr>
                <td>{{ this.item }}</td>
                <td>{{ this.quantity }}</td>
                <td>{{ this.unitType }}</td>
                <td><a class="btn btn-primary" href="/update/{{ this._id }}">UPDATE</a></td>
                <td><a class="btn btn-danger btn-sm" href="/delete/{{ this._id }}">DELETE</a></td>
            </tr>            
        {{/each}}        
    </tbody>    
</div>
</table>
